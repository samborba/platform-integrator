{
  "name": "platiaot",
  "version": "1.0.0",
  "description": "PlatIAot is a scalable server capable of integrating the @dojot IoT platform and the artificial intelligence platform for agribusiness @Platiagro. The project is built using Node.js and makes use of Socket.IO library for bidirectional transmission in real time between platforms and Express.js framework for request handler.",
  "main": "src/server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm-run-all -p dev:*",
    "dev:server": "nodemon src/server.js",
    "dev:platiagro": "nodemon src/clients/platiagro.js",
    "dev:dojot": "nodemon src/clients/dojot.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samborba/PlatIAoT.git"
  },
  "author": "Samuel F. Borba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samborba/PlatIAoT/issues"
  },
  "homepage": "https://github.com/samborba/PlatIAoT#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "bull": "^3.13.0",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mqtt": "^2.18.8",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4"
  }
}
